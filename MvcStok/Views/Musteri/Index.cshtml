@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı: </b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
<tr>
    <th>MÜŞTERİ ID</th>
    <th>MÜŞTERİ ADI</th>
    <th>MÜŞTERİ SOYADI</th>
    <th>SİL</th>
    <th>GÜNCELLE</th>
</tr>

<tbody>
    @foreach (var mst in Model)
    {
        <tr>
            <th>@mst.MUSTERIID</th>
            <td>@mst.MUSTERİAD</td>
            <td>@mst.MUSTERISOYAD</td>
            @*<td><a href="/Musteri/SIL/@mst.MUSTERIID" class="btn btn-danger">SİL</a> </td>*@
            @*<td><a href="/Musteri/MusteriGetir/@mst.MUSTERIID" class="btn btn-success">GÜNCELLE</a> </td>*@
            <td>@Html.ActionLink("SİL", "SIL", new { id = mst.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silme İşlemini Onaylıyor Musunuz ?')" })</td>
            <td><a href="/Musteri/MusteriGetir/@mst.MUSTERIID" class="btn btn-success">GÜNCELLE</a> </td>
        </tr>
    }
</tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

