@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" placeholder="ÜRÜN ADI"/>
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" required="" placeholder="MARKA ADI"/>
    </div>
    <div>
        <label>Ürün Kategorisi Seçiniz</label>
        @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new {@class ="form-control"})
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" required="" placeholder="ÜRÜN FİYATI"/>
    </div>
    <div>
        <label>Stok Adeti</label>
        <input type="text" class="form-control" name="STOK" required="" placeholder="STOK MİKTARI"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

